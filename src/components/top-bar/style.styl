@import 'assets/css/mixins/animation'

:host

	.root
		display grid
		grid-template-areas 'logo content filter'
		grid-template-columns 128px auto 64px
		grid-template-rows auto
		height 64px
		width 100rem
		min-width 100vw
		max-width 100vw
		color white
		background linear-gradient(45deg, #1e73aa 0%, #23a5fa 100%)
		font-family 'Montserrat', 'Arial', 'Helvetica', sans-serif
		align-items center
		box-shadow 0px 2px 4px -1px rgba(0,0,0,0.2), 0px 4px 5px 0px rgba(0,0,0,0.14), 0px 1px 10px 0px rgba(0,0,0,0.12)

		.logo
			grid-area logo
			display flex
			justify-content center
			padding-left 20px

		.filter
			grid-area filter
			display flex
			justify-content center
			user-select none
			cursor pointer

	.animationPulse
		animation pulse 600ms
		box-shadow 0 0 0 10px rgba(#fff, 0)!important
		border-radius 50%!important

	/**
	 * Animation keyframe
	 */

	@keyframes pulse {
		0% {
			box-shadow 0 0 0 0 #61DAFB
			}
	}