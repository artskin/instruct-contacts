:host

	.card
		background #fff
		height auto
		margin 0.5rem
		padding 0.5rem
		position relative
		width 300px
		border-radius 12px
		box-shadow 0px 2px 1px -1px rgba(0, 0, 0, 0.2), 0px 1px 1px 0px rgba(0, 0, 0, 0.14), 0px 1px 3px 0px rgba(0,0,0,.12)
		border-radius 4px

		.name
			font-size 15px
			display grid
			grid-template-areas 'name username'
			grid-template-columns 32px auto
			grid-template-rows 32px
			align-items center

		.info
			max-height 0
			overflow hidden
			transition max-height 600ms ease
			will-change max-heigth

			&[show]
				max-height 300px

		.email
			font-family 'Roboto', 'Arial', 'Helvetica', sans-serif
			font-size 13px
			display grid
			grid-template-areas 'icon email'
			grid-template-columns 32px auto
			align-items center

	/**
	 * Media Queries
	 */
	@media only screen and (max-width: 425px)
		.card
			width 80vw