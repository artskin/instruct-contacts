:host
	position absolute

	&([active])
		.root
			transform translateX(-300px)

		.overlay
			display block

	.root
		display grid
		grid-template-areas 'search'\
												'container'
		grid-template-rows 64px auto
		grid-template-columns auto
		position fixed
		z-index 3
		width 300px
		height 100vh
		background-color #1F3A54
		color white
		right 0
		box-shadow 0px 2px 4px -1px rgba(0,0,0,0.2), 0px 4px 5px 0px rgba(0,0,0,0.14), 0px 1px 10px 0px rgba(0,0,0,0.12)
		right -300px
		transition transform 300ms ease

		.search
			grid-area search
			padding-top 35px
			padding-left 30px
			padding-right 30px
			padding-bottom 30px

		.content
			grid-area container
			padding-top 30px
			padding-left 30px
			padding-right 30px
			padding-bottom 30px

			.radio
				margin-bottom 7px

	.overlay
		height 100vh
		width 100vw
		background rgba(0, 0, 0, 0.5)
		position fixed
		z-index 2
		display none